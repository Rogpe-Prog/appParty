<%- include('header') %>

<!-- Begin page content -->
<section class="text-dark bg-light">

    <div class="jumbotron jumbotron-fluid pb-3">
        <div class="container">
        <h1 class="display-6 mt-4">Let's New Party!</h1>
        <h2 class="display-6">Editing your party.</h2>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-12 mx-auto">
        <form method="POST">
            <div class="form-group">
                <label for="name">Name of Party</label>
                <input value="<%= infos.name %>" type="text" class="form-control" id="name" name="name" aria-describedby="nameHelp">
                <small id="nameHelp" class="form-text text-muted">Come on just a great Party.</small>
            </div>
            <div class="form-group">
                <label for="where">Where does it happen</label>
                <input value="<%= infos.where %>" type="text" class="form-control" id="where" name="where">
            </div>
            <div class="form-group">
                <label for="when">When and hour to arrive</label>
                <input value="<%= infos.when %>" type="text" class="form-control" id="when" name="when">
            </div>
            <div class="form-group">
                <label for="note">Put here more information</label>
                <textarea class="form-control" id="note" name="note" rows="5"><%= infos.note %></textarea>
            </div>
            <button class="btn btn-secondary text-light">Go... <i class="fa fa-arrow-circle-right"></i> </button>
        </form>
        </div>
    </div>
</section>


<%- include('footer') %>

